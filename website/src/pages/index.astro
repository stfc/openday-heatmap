---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import labMap from "../assets/map-final.png";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col h-screen">
		<Header title={SITE_TITLE} />
		<main class="pl-10 pr-10">
			<div class="mb-4 sm:m-32 sm:mt-5 sm:mb-5">
				<h1 class="text-xl font-bold">üó∫Ô∏è Daresbury Heatmap</h1>
				<p>
					Welcome to the Daresbury Open Day heatmap website.
					<br />
					As you go around today, make sure to scan the QR codes in each zone to
					find out more information and then come to the Computing zone to retrace
					your steps!
				</p>
			</div>

			<div class="mb-4 sm:m-32 sm:mt-5 sm:mb-5">
				<h1 class="text-xl font-bold">üìç Daresbury Map</h1>
				<p>
					To help with your journey today, we have the official Daresbury
					Open Day map below. <br />
					<em>You can either zoom-in or click to download!</em>
				</p>
			</div>

			<a href={labMap.src}>
				<img
					src={labMap.src}
					alt="A cartoon map of Daresbury Lab"
					class="w-6/6 sm:w-5/6 m-auto"
				/>
			</a>
		</main>
		<Footer />
	</body>
</html>
